{
  "name": "victron-press",
  "version": "0.1.0",
  "description": "Victron Energy documentation application",
  "author": "Victron Energy",
  "homepage": "https://github.com/victronenergy/victron-press",
  "repository": {
    "type": "git",
    "url": "https://github.com/victronenergy/victron-press.git"
  },
  "bugs": {
    "url": "https://github.com/victronenergy/victron-press/issues"
  },
  "scripts": {
    "install": "npm run build:symlink",
    "start": "vuepress dev data/docs",
    "build:clean": "rimraf data/dist/",
    "build:symlink": "symlink-dir frontend/vuepress data/docs/.vuepress",
    "build:html": "vuepress build data/docs -d data/dist",
    "build:pdf": "foreach -g 'data/docs/**/*.md' -x 'markdown-pdf -h frontend/markdown-pdf/runnings.js -s frontend/markdown-pdf/pdf.css -b 10mm -o \"data/dist/#{reldir}/#{name}.pdf\" #{path}'",
    "build:index": "node frontend/buildindex.js",
    "build": "npm-run-all -s build:clean build:symlink -p build:html build:pdf build:index",
    "lint": "eslint frontend/**/*.{js,vue}",
    "fix": "eslint --fix frontend/**/*.{js,vue}"
  },
  "devDependencies": {
    "cross-spawn": "^6.0.5",
    "eslint": "^5.15.3",
    "eslint-plugin-vue": "^5.2.2",
    "foreach-cli": "^1.8.1",
    "fs-extra": "^7.0.1",
    "globby": "^9.1.0",
    "markdown-pdf": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "symlink-dir": "^3.0.0",
    "vuepress": "^0.14.10"
  },
  "dependencies": {
    "@toast-ui/vue-editor": "^1.0.4",
    "axios": "^0.18.0",
    "tui-editor": "^1.3.3",
    "webpack-dev-middleware": "3.6.0"
  }
}
