input[type="text"]
    padding 10px 15px
    height 40px
    box-sizing border-box
    width 100%
    border-radius 2px
    border 1px solid #d2d2d2
    font-size 14px

.disabled 
    cursor disabled
    pointer-events none
    opacity 0.5

.button.danger
    background-color #dc3545
    color white
    border none
    margin 0